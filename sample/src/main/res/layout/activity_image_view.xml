<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ultra_dark"
        tools:context=".ImageViewActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            card_view:cardCornerRadius="6dp">

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/iv_user_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/android"
                app:sriv_border_color="#008fea"
                app:sriv_border_width="0dip"
                app:sriv_left_bottom_corner_radius="6dip"
                app:sriv_left_top_corner_radius="6dip"
                app:sriv_oval="false"
                app:sriv_right_bottom_corner_radius="6dip"
                app:sriv_right_top_corner_radius="6dip" />
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btnUpdatePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_image_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_button_dark_rounded"
            android:paddingBottom="5dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="5dp"
            android:text="@string/update_profile_picture"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>